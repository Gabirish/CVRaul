@model CVRaul.Models.Contato

@{
    ViewBag.Title = "Contato";
}



@using (Html.BeginForm())
{

    
    @Html.AntiForgeryToken()


    <div id="mydivheader">
    <h2>Contato</h2>
    @{
        if (ViewBag.Sucesso != null)
        {
            <div class="row" id="alerta">
                <span class="alert-success col-md-12 text-center"> @ViewBag.Sucesso </span>
            </div>
        }
    }
    </div>
    <div class="row col-md-12">
        <div class="col-md-6 text-left">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label text-left" })
                <div class="contatoForm">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label text-left" })
                <div class="contatoForm">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Assunto, htmlAttributes: new { @class = "control-label text-left" })
                <div class="contatoForm">
                    @Html.EditorFor(model => model.Assunto, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Assunto, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mensagem, htmlAttributes: new { @class = "control-label  text-left" })
                <div class="contatoForm">
                    @Html.EditorFor(model => model.Mensagem, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Mensagem, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="">
                    <input type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </div>
        </div>


        <div class="col-md-5" id="dadosDeContato">
            E-mail : <a href="mailto:raulgdpontes@gmail.com">raulgdpontes@gmail.com</a> <br />
            Telefone: <a href="tel:(12)996666898">(12) 9 9666-6898 </a><br />
            Baixe meu CV : DOWNLOAD (em breve)
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
