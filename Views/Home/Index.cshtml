@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<CVRaul.Models.Visitante>


@{
    DateTime birthday = new DateTime(1984, 08, 15);
    int age = DateTime.Now.Year - birthday.Year;

    if (birthday.DayOfYear > DateTime.Now.DayOfYear) { age--; }

    string saudacao = $"{DateTime.Now.TimeOfDay}";

}
<script type="text/javascript">
    var d = new Date();
    var n = d.getHours();
    var saudacao;
    if (n >= 0 && n <= 11) {
        saudacao = "BOM DIA!";
    }
    else if (n >= 12 && n <= 17) {
        saudacao = "BOA TARDE!";
    }
    else if (n >= 18) {
        saudacao = "BOA NOITE!";
    }

</script>

<div>

    <h2>
        <script type="text/javascript">
            document.write(saudacao)
        </script>
    </h2>
    <h5> @ViewBag.Visitante </h5>
</div>


